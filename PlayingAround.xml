    <groovyStep name="testJsonToArray" resultDataDef="testStringArray" nextStep="end">
        <script>
           <![CDATA[
            import groovy.*
            import groovy.json.*
            import groovy.json.JsonSlurper

            def jsonSlurper = new JsonSlurper()
            def object = jsonSlurper.parseText(json.toString())
